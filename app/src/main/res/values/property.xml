<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundImageView">
        <attr name="radius" format="dimension"/>
        <attr name="type" format="integer">
            <enum name="cycle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BothTextView">
        <attr name="subText" format="string"/>
        <attr name="subTextSize" format="dimension"/>
        <attr name="subTextColor" format="color"/>
        <attr name="innerPadding" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="NoteBookLayout">
        <attr name="lines" format="integer" />
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="lineWidthMode" format="integer">
            <enum name="match_parent" value="-1"/>
            <enum name="wrap_content" value="-2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="item_padding" format="dimension"/>
        <attr name="item_divide_horizontal" format="dimension"/>
        <attr name="item_divide_vertical" format="dimension"/>
        <attr name="orientation" format="integer">
            <enum name="vertical" value="-1"/>
            <enum name="horizontal" value="-2"/>
        </attr>
        <attr name="item_padding_fixable" format="boolean"/>
    </declare-styleable>
    
</resources>